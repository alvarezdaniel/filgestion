<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" >
  <class name="Fil.Modelo.Entidades.Pais, Fil.Modelo" table="Paises" lazy="true">
    <id name="id" access="field">
      <column name="PaiId" sql-type="char(32)" 
        not-null="true"/>
      <generator class="uuid.hex" />
    </id>
    <property name="Nombre" column="PaiNombre" />
    <property name="autonumerico" access="field" column="PaiAutonumerico" insert="false" update="false" />
  </class>
  <query name="Pais.ObtenerPorId">
    FROM Pais P
    WHERE P.id = :Id
  </query>
  <query name="Pais.ObtenerTodos">
    FROM Pais P
  </query>
</hibernate-mapping>